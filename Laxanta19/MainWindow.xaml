<Window x:Class="Laxanta19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laxanta19"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF6777CB" Offset="0.749"/>
                <GradientStop Color="#FE273159"/>
                <GradientStop Color="#FE54A672" Offset="0.481"/>
                <GradientStop Color="#FE327488" Offset="0.236"/>
                <GradientStop Color="#FEC967DD" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Height="400" Margin="157,10,0,0" Width="379" Background="#FFE8E1E1" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label x:Name="label1" Content="Autorization" Margin="257,24,235.6,0" RenderTransformOrigin="0.512,0.484" FontSize="36" Background="{x:Null}" Foreground="Black" FontFamily="Cambria Math" FontWeight="Bold" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Login" Margin="204,106,368.6,291" FontSize="18" FontWeight="Bold" FontFamily="Cambria Math">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="23" Margin="362,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="136" FontSize="14"/>
        <Button x:Name="button1" Content="Exit" HorizontalAlignment="Left" Margin="447,368,0,0" Width="77" Click="Button_Click" Height="27" VerticalAlignment="Top" ClickMode="Press" Background="#FFFA6868" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="label3" Content="Password" Margin="204,190,368.6,207" FontSize="18" RenderTransformOrigin="0.7,0.38" FontWeight="Bold" FontFamily="Cambria Math">
            <Label.Background>
                <ImageBrush/>
            </Label.Background>
        </Label>
        <TextBox x:Name="passwords" HorizontalAlignment="Left" Height="23" Margin="362,190,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="136" FontSize="14"/>
        <Button x:Name="button2" Content="Register" HorizontalAlignment="Left" Margin="291,323,0,0" VerticalAlignment="Top" Width="117" Background="#FF369DF1" Click="button2_Click" FontSize="14" FontWeight="Bold" Height="28"/>
        <Button x:Name="button3" Content="Login" HorizontalAlignment="Left" Margin="291,271,0,0" VerticalAlignment="Top" Width="117" RenderTransformOrigin="0.5,0.5" Click="Button_Click_1" FontSize="14" FontWeight="Bold" Height="28" Background="#FF41DA31"/>
    </Grid>
</Window>
